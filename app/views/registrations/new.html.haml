%h1 Sign Up
= form_with model: @user, url: sign_up_path do |f|
  %p
    = f.label 'name'
    %br
    = f.text_field :name
  
  %p
    = f.label 'email'
    %br
    = f.text_field :email
  %p
    = f.label 'password'
    %br
    = f.password_field :password

  %p
    = f.label 'password_confirmation'
    %br
    = f.password_field :password_confirmation

  %p
    = f.submit 'Sign Up'
